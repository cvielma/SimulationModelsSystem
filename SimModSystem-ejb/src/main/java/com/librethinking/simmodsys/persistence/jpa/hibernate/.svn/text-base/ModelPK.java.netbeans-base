package com.librethinking.simmodsys.persistence.jpa.hibernate;

import java.io.Serializable;
import java.util.Objects;
import javax.persistence.*;
import javax.validation.constraints.NotNull;
import javax.validation.constraints.Size;

/**
 * This class represents the primary key for a Model.
 * @author Christian Vielma <cvielma@librethinking.com>
 */
@Embeddable
public class ModelPK implements Serializable {
    @Basic(optional = false)
    @NotNull
    @Column(name = "\"C_USER\"")
    private String user;
    @Basic(optional = false)
    @NotNull
    @Size(min = 1, max = 20)
    @Column(name = "\"NM_MODEL\"")
    private String nmModel;

    public ModelPK() {
    }

    public ModelPK(String user, String name) {
        this.user = user;
        this.nmModel = name;
    }

    public String getNmModel() {
        return nmModel;
    }

    public void setNmModel(String nmModel) {
        this.nmModel = nmModel;
    }

    public String getUser() {
        return user;
    }

    public void setUser(String user) {
        this.user = user;
    }

    @Override
    public boolean equals(Object obj) {
        if (obj == null) {
            return false;
        }
        if (getClass() != obj.getClass()) {
            return false;
        }
        final ModelPK other = (ModelPK) obj;
        if (!Objects.equals(this.user, other.user)) {
            return false;
        }
        if (!Objects.equals(this.nmModel, other.nmModel)) {
            return false;
        }
        return true;
    }

    @Override
    public int hashCode() {
        int hash = 7;
        hash = 89 * hash + Objects.hashCode(this.user);
        hash = 89 * hash + Objects.hashCode(this.nmModel);
        return hash;
    }
    
    
}
