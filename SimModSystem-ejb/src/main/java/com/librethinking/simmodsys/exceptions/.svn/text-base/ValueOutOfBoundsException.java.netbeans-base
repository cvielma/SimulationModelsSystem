package com.librethinking.simmodsys.exceptions;

/**
 * This exception should be used when a value that is out of a specific 
 * range is tried to be set up. 
 * 
 * @author Christian Vielma <cvielma@librethinking.com>
 */
public class ValueOutOfBoundsException extends RuntimeException {
  public ValueOutOfBoundsException(){
        super("Value is out of bounds. Check reference.");
    }
    
    public ValueOutOfBoundsException(String err) {
        super(err);
    }   
}
